{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Full Stack (Auto-attach)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:debug:webpack"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "serverReadyAction": {
        "pattern": "ready on",
        "uriFormat": "http://localhost:3000",
        "action": "openExternally"
      },
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Next.js: Attach to App Router (9233)",
      "type": "node",
      "request": "attach",
      "port": 9233,
      "restart": true,
      "timeout": 10000,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/.next/server/**/*.js",
        "${workspaceFolder}/.next/server/**/*.mjs"
      ]
    },
    {
      "name": "Chrome: Debug Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Full Stack Debug",
      "configurations": [
        "Next.js: Debug Full Stack (Auto-attach)",
        "Chrome: Debug Client"
      ],
      "stopAll": true
    }
  ]
}
